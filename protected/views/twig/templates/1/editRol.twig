{% include 'includesAdmin/header.html' %}
<div id="page-wrapper">
	{% include 'includesAdmin/header2.html' %}
	<div id="page-content-wrapper">
		<div id="page-content">
			<div class="container">
				<div id="page-title">
					<h2>Agregar Registro</h2>
					<p>{{dominio|upper}}</p>
				</div>
				<div class="panel panel-default">
					<div class="panel-body">
						<form id="frm1" name="frm1" action="{{pathCMSSite}}rol" method="post" enctype="multipart/form-data" class="form-horizontal bordered-row">
							<input type="hidden" name="Dominio" id="txtDominio" value="{{dominio}}"/>
							<input type="hidden" name="idReg" id="idReg" value="{{idReg}}"/>
							<input type="hidden" name="Action" id="Action" value=""/>
							<input type="hidden" name="path" id="path" value="{{pathCMSSite}}"/>
							<div class="form-group">
								<label class="col-sm-2 control-label">
									Rol
								</label>
								<div class="col-sm-10">
									<input type="text" class="form-control form-control" id="txtRol" name="txtRol" value="{{datos.rol}}"/>
								</div>
							</div>
							<div class="form-group">
								<br/>
								<div class="col-lg-offset-2 col-lg-10">
									<button type="submit" class="btn btn-sm btn-info" name="cmdRegresar" id="cmdRegresar" data-action="rol" value="1">
										<i class="glyph-icon icon-angle-double-left"></i>
										Regresar
									</button>
									<button type="submit" class="btn btn-sm btn-success" name="cmdEditar">
										<i class="glyph-icon icon-save"></i>
										Guardar
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% include 'includesAdmin/footerJS.html' %}
